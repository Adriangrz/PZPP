@model IEnumerable<EquipmentManagement.Models.ProductViewModel>

@{
    ViewData["Title"] = "Index";
}
<div class="bg-white p-3 rounded-3 w-100 flex-grow-1 mb-2 mt-2">
<div class="container-fluid d-flex flex-column flex-sm-row justify-content-between">
<div class="mb-2 mb-sm-0">
    @Html.ActionLink("Utwórz nowy", "Create", "Products",null,new {@class="btn btn-primary"})
</div>
<div class="d-flex justify-content-evenly mb-2 mb-sm-0">
            @Html.ActionLink("Powrót", "Index", "Home",null,new {@class="btn btn-primary"})
        </div>
@using (Html.BeginForm("Index","Products",FormMethod.Post,new { @class="d-flex flex-column flex-sm-row w-auto" }))
{
        @Html.TextBox("SearchString",null,new { @class="form-control me-2 mb-2 mb-sm-0", @placeholder = "Szukaj po nazwie", @type="Search" })
        <button class="btn btn-primary" type="submit">Szukaj</button>
}
</div>

<table class="table d-none d-sm-table">
    <thead>
        <tr>
            <th>
                @Html.ActionLink("Nazwa", "Index", new { sortOrder = ViewBag.NameSortParm})
            </th>
            <th>
                @Html.ActionLink("Typ", "Index", new { sortOrder = ViewBag.TypeSortParm})
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Availability)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Availability)
            </td>
            <td>
                <div class="btn-group btn-group-sm" role="group">
                    <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id">Edytuj</a>
                    <a class="btn btn-outline-primary" asp-action="Details" asp-route-id="@item.Id">Szczegóły</a>
                    <a class="btn btn-outline-primary" asp-action="Delete" asp-route-id="@item.Id">Usuń</a>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>

<div class="d-block d-sm-none">
    @foreach (var item in Model) {
        <div>
        <hr />
        <dl class="row">
            <dt class = "col-12 text-center">
                @Html.DisplayNameFor(model => item.Name)
            </dt>
            <dd class = "col-12 text-center">
                @Html.DisplayFor(model => item.Name)
            </dd>
            <dt class = "col-12 text-center">
                @Html.DisplayNameFor(model => item.Type)
            </dt>
            <dd class = "col-12 text-center">
                @Html.DisplayFor(model => item.Type)
            </dd>
            <dt class = "col-12 text-center">
                @Html.DisplayNameFor(model => item.Desc)
            </dt>
            <dd class = "col-12 text-center">
                @Html.DisplayFor(model => item.Desc)
            </dd>
            <dt class = "col-12 text-center">
                @Html.DisplayNameFor(model => item.Price)
            </dt>
            <dd class = "col-12 text-center">
                @Html.DisplayFor(model => item.Price)
            </dd>
            <dt class = "col-12 text-center">
                @Html.DisplayNameFor(model => item.Location)
            </dt>
            <dd class = "col-12 text-center">
                @Html.DisplayFor(model => item.Location)
            </dd>
            <dt class = "col-12 text-center">
                @Html.DisplayNameFor(model => item.Availability)
            </dt>
            <dd class = "col-12 text-center">
                @Html.DisplayFor(model => item.Availability)
            </dd>
        </dl>
    </div>
    <div class="d-flex flex-column">
        <div class="btn-group btn-group-sm" role="group">
                <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id">Edytuj</a>
                <a class="btn btn-outline-primary" asp-action="Details" asp-route-id="@item.Id">Szczegóły</a>
                <a class="btn btn-outline-primary" asp-action="Delete" asp-route-id="@item.Id">Usuń</a>
        </div>
        
    </div>
    }
</div>
</div>
